@model TreeViewProject.Models.tbl_notes

@{
    ViewBag.Title = "Delete";
}

<h2>Not Sil</h2>

<h5>Bu notu silmek istediğinize emin misiniz?(Eğer parent not siliyorsanız, ona bağlı olan alt notlar da silinecektir.)</h5>
<div>
    <dl class="dl-horizontal">
        <dt>
            Not Adı: <span style="font-weight:100">@Html.DisplayFor(model => model.Note_Name)</span>
        </dt>
    </dl>
    <br />
    <br />
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Note_Id)
        @Html.HiddenFor(model => model.Note_Name)
        @Html.HiddenFor(model => model.Note_ParentId)
        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-default" /> |
            @Html.ActionLink("Notlara Dön", "Index", "Home")
        </div>
    }
</div>

